{% extends 'base.html.twig' %}

{% block title %}CheeseListing{% endblock %}

{% block body %}



    <h1 class="text-center">CheeseListing</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cheese_listing.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ cheese_listing.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ cheese_listing.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ cheese_listing.price }}</td>
            </tr>
            <tr>
                <th>IsPublished</th>
                <td>{{ cheese_listing.isPublished ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ cheese_listing.slug }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ cheese_listing.createdAt ? cheese_listing.createdAt|ago : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ cheese_listing.updatedAt ? cheese_listing.updatedAt|ago : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_cheeses') }}" class="btn-sm btn btn-primary">back to list</a>

    <a class="btn-sm btn btn-warning" href="{{ path('app_cheese_edit', {'id': cheese_listing.id}) }}">edit</a>

    {{ include('cheese_listing/_delete_form.html.twig') }}

{% endblock %}
